<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp">

    <RelativeLayout
            android:background="@drawable/selector_common_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/coll_book_iv_cover"
                android:layout_width="45dp"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:scaleType="centerInside"
                android:src="@mipmap/ic_book_loading"/>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:layout_toRightOf="@+id/coll_book_iv_cover"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/coll_book_tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxEms="15"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    tools:text="逆鳞"/>

            <TextView
                    android:id="@+id/coll_book_tv_lately_update"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/coll_book_tv_name"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/wyTextCommon2"
                    android:textSize="12sp"
                    tools:text="17小时前:"/>

            <TextView
                    android:id="@+id/coll_book_tv_chapter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/coll_book_tv_lately_update"
                    android:layout_marginTop="4dp"
                    android:layout_toRightOf="@id/coll_book_tv_lately_update"
                    android:ellipsize="end"
                    android:maxEms="14"
                    android:maxLines="1"
                    android:textColor="@color/wyTextCommon2"
                    android:textSize="12sp"
                    tools:text="第二卷、逆水行舟！第四百六十五章、打蛇七寸！"/>
        </RelativeLayout>

        <ImageView
                android:id="@+id/coll_book_iv_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@mipmap/label_book_top"
                android:visibility="gone"
                tools:visibility="visible"/>

        <ImageView
                android:id="@+id/coll_book_iv_red_rot"
                android:layout_width="3dp"
                android:layout_height="3dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:src="@drawable/shape_round_red"
                android:visibility="gone"
                tools:visibility="visible"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>